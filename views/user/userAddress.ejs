<%- include('../layouts/userHeader.ejs') %>

    <main class="main">
        <div class="text-end me-5 mt-5">
            <a href="/addAddress"><button class="btn float-end btn-success btn-sm rounded font-md">Add
                    Address</button></a>
        </div>
        <section class="pt-80 pb-90">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 m-auto">
                        <div class="row">
                            <%- include('../layouts/userSidebar.ejs') %>
                            <div class="col-md-8">
                                <div class="row">
                                    <% if(addressData.length>0){ addressData?.forEach(address=> {
                                        if (address.is_listed ) {
                                     %> 
                                     <div class="col-lg-12">
                                            <div class="card mb-3 mb-lg-0">
                                                <div class="card-header">
                                                    <h5 class="mb-0">
                                    <% const address_id=address.user %>
                                    <% if (address_id.toString()===userData._id.toString()) { %>
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <span><%= userData.name %></span>
                                        </div>
                                        <div>
                                            <span><%= userData.mobile %></span>
                                        </div>
                                    </div>
                                    <% } %>
                                    </h5>
                                 </div>
                                <div class="card-body d-flex">
                                    <address>
                                    <%=address.houseName %>
                                    <%=address.city %>
                                    <%=address.street %>
                                    <%=address.state %>
                                    <%=address.pincode %>
                                    </address>
                                    <div class="d-flex justify-content-end w-100">
                                        <div class="">
                                            <a href="editAddress?id=<%= address._id %>"
                                                class="btn-small">Edit</a>
                                        </div>
                                        <div class="ms-2">
                                            <a href="deleteAddress?id=<%= address._id %>"
                                                class="btn-small">delete</a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <% }})}else {; %>
                            <tr>
                                <td colspan="6">
                                    <p class="text-center pt-50">Address not found</p>
                                </td>
                            </tr>
                        <% }%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>



    <%- include('../layouts/userFooter.ejs') %>
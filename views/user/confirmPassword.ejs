<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= locals.title %>
    </title>
    <meta name="description" content="<%= locals.description %>" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="./assets/css/style.css" />
</head>

<body>
    <!-- Navbar -->
    <div style="background-image: url('./assets/images/background/240_F_538627760_ah9BPKQ0K4d9PnJ6O5UrsPATy1IaY3ne.jpg'); background-repeat: no-repeat; background-size: cover;" class="image-fluid">
        <nav class="navbar navbar-expand-lg bg-body-transparent d-flex position-absolute fixed-top">
            <div class="container container-logo " style="margin:0 0 0 20px; width: 30vw;">
                <a id="logo_ff" href="#"><img class="img-fluid ustify-content-start"
                        src="./assets/images/Logo/FemmeFatale_logo.png" alt="logo_ff"></a>
            </div>
        </nav>
        <div class="image-fluid container d-flex justify-content-center">
            <div class="row">
                <div class="col-lg-5 mt-5">
                    <div style="background-image: url('./assets/images/background/360_F_252462576_koy7njo9iYx6gUcM26IZcDUs9fMKIKJs.jpg'); background-repeat: no-repeat; background-size: cover; margin-top: 13vh; margin-bottom: 17vh; width: 100vh; height: 70vh;" class="image-fluid bg-light bg-opacity-10 pt-4 d-flex justify-content-center align-items-center">
                        <div class="card-body pt-4 pb-5">
                            <h1 class="card-title text-center pb-3 text-dark">Confirm Password</h1>
                            <p class="text-center pb-3 text-dark">Enter the new password</p>
                            <% if (typeof message !=='undefined' ) { %>
                                <div style="height: 15px; padding-top: 4px;" class="alert text-danger text-center">
                                    <h5>
                                        <%= message %>
                                    </h5>
                                </div>
                                <% } %>
                            <form id="myForm" class="pt-3 text-center" action="/confirmPassword" method="post" onsubmit="return validation()">
                                <div class="mb-3 d-flex justify-content-center">
                                    <div class="col-lg-9">
                                        <input type="password" class="form-control text-center" name="password" placeholder="Enter Password" onblur="passwordChecking()" id="password" required />
                                        <div id="errorpassword" class="mt-2 text-danger"></div>
                                    </div>
                                </div>
                                <div class="mb-3 d-flex justify-content-center">
                                    <div class="col-lg-9">
                                        <input type="password" class="form-control text-center" placeholder="Confirm Password" onblur="password2Checking()" id="cpassword" required />
                                        <div id="errorcpassword" class="mt-2 text-danger"></div>
                                    </div>
                                </div>
                                <div class="text-center mt-5">
                                    <button type="submit" class="btn btn-primary w-50 rounded-pill text-center">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    <script>

        let password = document.getElementById("password").value;
        function passwordChecking() {
            password = document.getElementById("password").value;
            console.log(password, "kkkkk");
            if (password == "") {
                document.getElementById("errorpassword").innerHTML = "Create your password";
                return false;
            } else if (password.length < 8) {
                document.getElementById("errorpassword").innerHTML = "Enter a minimum of 8 digits";
                return false;
            } else {
                document.getElementById("errorpassword").innerHTML = "";
                return true;
            }
        }

        function password2Checking() {
            let password2 = document.getElementById("cpassword").value;
            if (password2 == "") {
                document.getElementById("errorcpassword").innerHTML = "Confirm your password";
                return false;
            } else if (password2 != password) {
                document.getElementById("errorcpassword").innerHTML = "Password not matched";
                return false;
            } else if (password2.length < 8) {
                document.getElementById("errorcpassword").innerHTML = "Enter a minimum of 8 digits";
                return false;
            } else {
                document.getElementById("errorcpassword").innerHTML = "";
                return true;
            }
        }

        function validation() {
            if (passwordChecking() && password2Checking()) {
                document.getElementById("myForm").submit();
            }
            else {
                passwordChecking();
                password2Checking();
                return false;
            }
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>